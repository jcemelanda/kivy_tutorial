#:import random random

<ScatterTextWidget>:
	orientation: 'vertical'
	TextInput:
		id: t_input
		font_size: 150
		size_hint_y: None
		height: 200
		on_text: crazy_label.color = [random.random() for i in range(3)] + [1]
	FloatLayout:
		Scatter:
			Label:
				id: crazy_label
				text: t_input.text
				font_size: 150
